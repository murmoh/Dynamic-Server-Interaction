<LoadingScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        RotatingImage:
            source: 'loading.png'  # replace with your loading image
            size_hint: None, None
            size: '64dp', '64dp'
            pos_hint: {'center_x': .5, 'center_y': .5}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                PushMatrix
                Rotate:
                    angle: self.angle
                    origin: self.center
            canvas.after:
                PopMatrix
